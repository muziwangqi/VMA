<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_ll_up"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_tv1"
            android:text="@string/questionhelp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_tv2"
            android:text="@string/choosequestion"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/id_rb_aboutaccount"
                style="@style/BtnStyle"
                android:background="@drawable/btn_state"
                android:button="@null"
                android:text="@string/aboutaccount"
                android:textColor="@color/color_radiobutton"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/id_rb_aboutquality"
                style="@style/BtnStyle"
                android:background="@drawable/btn_state"
                android:button="@null"
                android:text="@string/aboutquality"
                android:textColor="@color/color_radiobutton"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/id_rb_aboutdownload"
                style="@style/BtnStyle"
                android:background="@drawable/btn_state"
                android:button="@null"
                android:text="@string/aboutdownload"
                android:textColor="@color/color_radiobutton"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/id_rb_aboutother"
                style="@style/BtnStyle"
                android:background="@drawable/btn_state"
                android:button="@null"
                android:text="@string/aboutother"
                android:textColor="@color/color_radiobutton"
                android:textSize="13sp"/>
        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/id_et_questions"
            android:background="@android:drawable/editbox_background_normal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_ll_down"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_tv3"
            android:text="@string/questionhelp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_tv4"
            android:text="@string/chooseadvice"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/id_rb_productionadvice"
                style="@style/BtnStyle"
                android:background="@drawable/btn_state"
                android:button="@null"
                android:text="@string/productionadvice"
                android:textColor="@color/color_radiobutton"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/id_rb_processerror"
                style="@style/BtnStyle"
                android:background="@drawable/btn_state"
                android:button="@null"
                android:text="@string/processerror"
                android:textColor="@color/color_radiobutton"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/id_rb_shortofsong"
                style="@style/BtnStyle"
                android:background="@drawable/btn_state"
                android:button="@null"
                android:text="@string/shortofsong"
                android:textColor="@color/color_radiobutton"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/id_rb_version"
                style="@style/BtnStyle"
                android:background="@drawable/btn_state"
                android:button="@null"
                android:text="@string/version"
                android:textColor="@color/color_radiobutton"
                android:textSize="13sp"/>
        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/id_et_advice"
            android:background="@android:drawable/editbox_background_normal"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_btn_commit"
        android:layout_below="@id/id_ll_down"
        android:text="@string/commit"/>

</LinearLayout>
