<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CAE1FF">
    <ImageView
        android:id="@+id/call_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/phone_vol"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/call_name"
        android:text="汪雪"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/call_type"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/call_time"
        android:text="2018-11-16"
        android:textSize="14sp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/call_number"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:text="16666666666"
        android:layout_below="@+id/call_name"
        android:layout_toRightOf="@+id/call_type"/>
</RelativeLayout>
