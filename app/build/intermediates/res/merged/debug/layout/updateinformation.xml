<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="100dp">
        <TextView
            android:id="@+id/up_text1" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="头像"/>
        <ImageView 
            android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:id="@+id/my_head"
    	   	android:src="@drawable/l"/>
    </RelativeLayout>
	<RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="100dp">
        <TextView
            android:id="@+id/up_text2" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="二维码名片"/>
        <ImageView 
            android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:id="@+id/my_code" 
    	   	android:src="@drawable/l"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="100dp">
        <TextView
            android:id="@+id/up_text3" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="昵称"/>
        <EditText android:id="@+id/my_nickname" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="昵称"/>
    </RelativeLayout>    
     <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="100dp">
        <TextView
            android:id="@+id/up_text4" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="V乐号"/>
        <EditText android:id="@+id/my_number" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="1564684565"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="100dp">
        <TextView
            android:id="@+id/up_text5" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="性别"/>
        <EditText android:id="@+id/my_sex" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="女"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="100dp">
        <TextView
            android:id="@+id/up_text6" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="出生年月"/>
        <TextView android:id="@+id/my_birthdy" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="1996-11-06"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="100dp">
        <TextView
            android:id="@+id/up_text7" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="所在地"/>
        <TextView android:id="@+id/my_address" 
           	android:layout_width="wrap_content"
    	   	android:layout_height="match_parent"
    	   	android:text="深圳"/>
    </RelativeLayout>
</LinearLayout>
