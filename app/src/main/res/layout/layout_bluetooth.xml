<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_bluetooth_search"
        android:text="蓝牙搜索"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bluetooth_status"
        android:text="初始状态"
        android:layout_toEndOf="@id/btn_bluetooth_search"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已配对设备"
        android:layout_below="@id/btn_bluetooth_search"
        android:id="@+id/tv_bluetooth_match"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bluetooth_unmatch"
        android:text="未配对设备"
        android:layout_below="@id/tv_bluetooth_match"
        android:layout_alignParentStart="@id/tv_bluetooth_match"/>

</RelativeLayout>
