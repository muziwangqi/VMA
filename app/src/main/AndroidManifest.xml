<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soling"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.soling.view.activity.Banner2Activity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.soling.view.activity.MainActivity"></activity>
        <activity android:name="com.soling.view.activity.AboutActivity"></activity>
        <!-- 线控切歌注册广播 -->
        <receiver android:name="com.soling.view.adapter.MediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" /> <!-- 耳机点击事件 -->
                <action android:name="android.media.AUDIO_BECOMING_NOISY" /> <!-- 插拔耳机事件 -->
            </intent-filter>
        </receiver>

        <activity android:name="com.soling.view.activity.LoginActivity"></activity>
        <activity android:name="com.soling.view.activity.InformationActivity"></activity>
        <activity android:name="com.soling.view.activity.TwoDimensionCode"></activity>
        <activity android:name="com.soling.view.activity.UpdateInformation"></activity>
        <activity android:name=".view.activity.SearchMusicActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.soling.view.activity.MainActivity" />
        </activity>

        <service android:name=".service.player.PlayerService">
            <intent-filter>
                <action android:name="cn.hyw.www.imusic.action.PLAY_NEXT" />
                <action android:name="cn.hyw.www.imusic.action.PLAY_LAST" />
                <action android:name="cn.hyw.www.imusic.action.PLAY_TOGGLE" />
            </intent-filter>
        </service>
    </application>

</manifest>